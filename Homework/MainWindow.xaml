<Window x:Class="Homework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homework"
        mc:Ignorable="d"
        Title="MainWindow" Height="275" Width="431" ResizeMode="NoResize" Loaded="Window_Loaded">
    <Grid>
        <TextBox x:Name="tbXml" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="384" Height="127"/>
        <ComboBox x:Name="cmbFilter" HorizontalAlignment="Left" Margin="66,11,0,0" VerticalAlignment="Top" Width="162" Height="21">
            <ComboBoxItem x:Name="cbiName" Content="Name"/>
            <ComboBoxItem x:Name="cbiAge" Content="Age"/>
            <ComboBoxItem x:Name="cbiCompany" Content="Company"/>
            <ComboBoxItem x:Name="cbiBillGastes" Content="Bill Gates"/>
            <ComboBoxItem x:Name="cbiLarryPage" Content="Larry Page"/>
            <ComboBoxItem x:Name="cbiTim" Content="Tim Cook"/>
            <ComboBoxItem x:Name="cbiLee" Content="Lee Jae Young"/>
        </ComboBox>
        <Button x:Name="btnConclusion" Content="Withdraw" HorizontalAlignment="Left" Margin="255,11,0,0" VerticalAlignment="Top" Width="81" Height="21" Click="btnConclusion_Click"/>

    </Grid>
</Window>
